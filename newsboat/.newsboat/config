# general settings
auto-reload yes
reload-time 15
max-items 50

# externel browser
browser "/usr/bin/qutebrowser %u"
macro m set browser "/usr/local/bin/mpv %u" ; open-in-browser ; set browser "/usr/bin/qutebrowser %u"
macro l set browser "/usr/bin/brave %u" ; open-in-browser ; set browser "/usr/bin/qutebrowser %u"
macro y set browser "/home/chris/scripts/ytq %u" ; open-in-browser ; set browser "/usr/bin/qutebrowser %u"
macro Y set browser "/home/chris/scripts/lbryq %u" ; open-in-browser ; set browser "/usr/bin/qutebrowser %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key g
unbind-key G
unbind-key ^F
unbind-key ^B

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key g home
bind-key G end
bind-key ^B pageup
bind-key ^F pagedown

# solarized
# color background         default   default
# color listnormal         default   default
# color listnormal_unread  default   default
color listfocus          black     cyan
color listfocus_unread   black     cyan
color info               black   cyan
# color info               default   black
# color article            default   default

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default

